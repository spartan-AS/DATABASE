START WITH 10000001
MAXVALUE 19999999
CACHE 10;
CREATE OR REPLACE TRIGGER tr_patient BEFORE INSERT ON patient FOR EACH ROW BEGIN
SELECT
LPAD(RTRIM(RTRIM(TO_CHAR(seq_patient_id.NEXTVAL))),10,'0') INTO :NEW.patient_id FROM DUAL;
END;
